<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>webStudy01</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>contentPath</param-name>
    <param-value>d:/contents</param-value>
  </context-param>
  <session-config>
     <session-timeout>2</session-timeout>
  </session-config>
  <error-page>
   <error-code>500</error-code>
   <location>/errors/error500.jsp</location>
  </error-page>
    <error-page>
   <error-code>404</error-code>
   <location>/errors/error404.jsp</location>
  </error-page>
    <error-page>
   <error-code>401</error-code>
   <location>/errors/error401.jsp</location>
  </error-page>
  <error-page>
  	<exception-type>java.lang.NullPointerException</exception-type>
  	<location>/errors/exceptionProcesPerType.jsp</location>
  </error-page>
</web-app>